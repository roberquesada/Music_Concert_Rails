<% if @concert.errors.any?  %>
  <ul>
    <% @concert.errors.full_messages.each do |error_msg| %>
    <li><%= error_msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for [@concert] do |f| %>
  <div>
    <%= f.label :band %>
    <%= f.text_field :band %>
  </div>
  <div>
    <%= f.label :venue %>
    <%= f.text_field :venue %>
  </div>
  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div>
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div>
  <div>
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <%= f.submit 'Save' %>


<% end %>
<%= link_to('Cancel', concerts_path(@concert)) %>
